<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layoutDescription="@xml/activity_main_scene"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/diger"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="12dp"
        android:layout_marginBottom="7dp"
        android:text="Diğer"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/hesap" />

    <Button
        android:id="@+id/hesap"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:text="Hesabım"
        app:layout_constraintBaseline_toBaselineOf="@+id/diger"
        app:layout_constraintEnd_toStartOf="@+id/diger"
        app:layout_constraintStart_toEndOf="@+id/ara" />

    <Button
        android:id="@+id/ara"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginEnd="2dp"
        android:text="Ara"
        app:layout_constraintBaseline_toBaselineOf="@+id/hesap"
        app:layout_constraintEnd_toStartOf="@+id/hesap"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="97dp"
        android:layout_height="19dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="156dp"
        android:layout_marginBottom="157dp"
        android:text="Alış Yeri"
        app:layout_constraintBottom_toBottomOf="@+id/birakisyeri"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="0dp"
        android:layout_height="18dp"
        android:layout_marginTop="67dp"
        android:layout_marginBottom="61dp"
        android:text="Bırakış Yeri"
        app:layout_constraintBottom_toBottomOf="@+id/birakisyeri"
        app:layout_constraintEnd_toEndOf="@+id/birakisyeri"
        app:layout_constraintStart_toStartOf="@+id/timeButton"
        app:layout_constraintTop_toTopOf="@+id/alisyeri" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="152dp"
        android:layout_height="19dp"
        android:layout_marginStart="13dp"
        android:layout_marginTop="52dp"
        android:layout_marginBottom="57dp"
        android:text="Alış ve Bırakış Tarihi"
        app:layout_constraintBottom_toBottomOf="@+id/timeButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/birakisyeri" />

    <Button
        android:id="@+id/arac_ara"
        android:layout_width="205dp"
        android:layout_height="48dp"
        android:layout_marginStart="73dp"
        android:layout_marginBottom="11dp"
        android:text="ARAÇ ARA"
        app:layout_constraintBottom_toTopOf="@+id/ara"
        app:layout_constraintStart_toStartOf="@+id/ara" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_marginBottom="7dp"
        app:layout_constraintBottom_toTopOf="@+id/textView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/yayan1" />

    <Button
        android:id="@+id/dateButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="80dp"
        android:text="Tarih Seç"
        app:layout_constraintStart_toEndOf="@+id/timeButton"
        app:layout_constraintTop_toBottomOf="@+id/birakisyeri" />

    <Button
        android:id="@+id/timeButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="12dp"
        android:text="Saat Seç"
        app:layout_constraintBaseline_toBaselineOf="@+id/dateButton"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/alisyeri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="13dp"
        android:layout_marginTop="186dp"
        android:text="Alış Yeri Seçin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/birakisyeri"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="14dp"
        android:layout_marginTop="50dp"
        android:text="Bırakış Yeri Seçin"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/alisyeri" />

</androidx.constraintlayout.widget.ConstraintLayout>